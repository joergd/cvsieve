<div class="col-sm-8">
  <%= bootstrap_devise_error_messages! %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><%= t('.sign_up', :default => "Sign up") %></h4>
    </div>
    <div class="panel-body">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
        <div class="form-group">
          <%= f.label :name, "Business name" %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
          <span class="help-block">Your applicants will see this email.</span>
        </div>
        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
          <% if @validatable %>
          <span class="help-block">(<%= @minimum_password_length %> characters minimum)</span>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
        </div>
        <hr />
        <span class="help-block">The contact name, telephone number, and email will be visible to your applicants.</span>
        <div class="form-group">
          <%= f.label :contact, "Contact name" %>
          <%= f.text_field :contact, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :tel %>
          <%= f.text_field :tel, class: "form-control" %>
        </div>
        <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
